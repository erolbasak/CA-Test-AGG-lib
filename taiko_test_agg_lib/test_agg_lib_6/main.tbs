sub on_lsock_event(newstate as enum pl_lsock_state)
	agg_proc_lsock_event(newstate)
end sub

sub on_button_pressed()
	generate_door_event()
end sub

sub on_lsock_data_sent()
	agg_proc_data_sent()
end sub
